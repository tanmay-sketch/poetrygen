{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react-jsx",       // Support JSX in TypeScript
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",            // Base directory for resolving non-relative modules
    "paths": {
      "@/*": ["./src/*"]         // Alias for resolving imports from src/
    }
  },
  "include": ["src/**/*"],  // Include all relevant file types inside src/
  "exclude": ["node_modules"]  // Exclude node_modules folder
}